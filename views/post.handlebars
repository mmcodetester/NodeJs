<div class="card">
    <div class="breadcrumbs-inner">
        <div class="row m-0">
            <div class="col-sm-4">
                <div class="page-header float-left">
                    <div class="page-title">
                        <h1>Posts</h1>
                    </div>
                </div>
            </div>
            <div class="col-sm-8">
                <div class="page-header float-right">
                    <div class="page-title">
                        <ol class="breadcrumb text-right">
                            <li><a href="/5f87e4443d9406180ccc1703">Dashboard</a></li>
                            <li class="active">Post</li>
                            <li><a href="/user/5f87e4443d9406180ccc1703/student">Student</a></li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <strong class="card-title">Activities & Posts</strong>
            </div>
            <div class="card-body">
                <form action="/user/5f87e4443d9406180ccc1703/post" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label>Title</label>
                        <input type="text" class="form-control" placeholder="" name="title">
                    </div>
                    <div class="form-group">
                        <label>Content Body</label>
                        <textarea name="body" id="textarea-input" rows="3" placeholder="Content..."
                            class="form-control"></textarea>
                    </div>
                    <div class="form-group">
                        <input type="file" name="profile" class="form-control">
                    </div>
                    <button type="submit" class="btn btn-success btn-sm m-b-30 m-t-30">Upload</button>
                </form>
            </div>
        </div>
    </div>
</div>
<div class="breadcrumbs-inner">
        <div class="row m-0">
            <div class="col-md-12">
                <div class="card">
                    <div class="page-header float-left">
                    <div class="page-title">
                        <h1>Edit & Delete Posts</h1>
                    </div>
                </div>
                </div>
            </div>
        </div>
    </div>

<div class="row">
    {{#each result}}
    <div class="col-md-4">
        <div class="card border border-success">
            <div class="card-header">
                <strong class="card-title">{{title}}</strong>
            </div>
            <div class="card-body">
                <p class="card-text">{{body}}</p>
                <small>{{date}}</small>
            </div>
            <div class="card-footer mb-0">
                <p class="float-right">
                    <a class="btn btn-danger btn-sm" href="/user/5f87e4443d9406180ccc1703/post/delete/{{_id}}"><i class="fa fa-trash" style="color:white"></i></a>
                    <a class="btn btn-warning btn-sm"><i class="fa fa-edit" style="color:white"></i></a>
                </p>
                
            </div>
        </div>
    </div>
    {{/each}}
</div>
